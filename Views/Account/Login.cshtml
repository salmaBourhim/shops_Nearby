@model projectTest.Models.RegisterModel

@{
    ViewBag.Title = "Login";
}
@{
    Layout = "~/Views/Account/_LoginLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="login_card card-container">
    <img id="profile-img" class="profile-img-card" src="~/Content/images/logo_login.png" />
    <span class="text-danger all_field"></span>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.TextBoxFor(m => m.Username, new { @class = "form-control isRequired", placeholder = "Username", required = "required" })
    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

    @Html.PasswordFor(m => m.Password, new { @class = "form-control isRequired", placeholder = "Password", required = "required" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    <button class="btn btn-lg btn-success btn-block btn-signin ">Log In</button>
    <div>
        @Html.ActionLink("if you don't have an account click here", "Register")
    </div>
</div>
}
